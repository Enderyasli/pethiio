<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.main.view.fragments.NotificationFragment">


    <androidx.cardview.widget.CardView
        android:id="@+id/back_btn"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:layout_marginStart="@dimen/default_margin"
        android:layout_marginTop="50dp"
        app:cardCornerRadius="17dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:src="@drawable/back_arrow" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="26dp"
        android:layout_marginTop="120dp"
        android:layout_marginBottom="3dp"
        android:fontFamily="@font/typo_round_bold"
        android:textColor="@color/orangeButton"
        android:textSize="@dimen/signup_title_size"
        tools:text="Bildirimler" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_tv"
        android:layout_marginTop="50dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/default_margin"
            android:layout_marginRight="@dimen/default_margin"
            android:background="@drawable/support_ly_rounded_bg"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/new_message_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="26dp"
                android:layout_marginTop="@dimen/default_margin"
                android:layout_marginEnd="@dimen/medium_size"
                android:layout_marginBottom="@dimen/default_margin"
                android:layout_weight="1"
                android:fontFamily="@font/typo_round_bold"
                tools:text="Yeni Mesaj"
                android:textColor="@color/grey"
                android:textSize="18sp" />

            <com.suke.widget.SwitchButton
                android:id="@+id/new_message_switch_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="@dimen/default_margin"
                app:sb_background="@color/hint_text_color"
                app:sb_border_width="2dp"
                app:sb_checked="false"
                app:sb_checked_color="@color/orangeButton"
                app:sb_shadow_color="@color/grey"
                app:sb_show_indicator="false"
                app:sb_uncheckcircle_color="@color/hint_text_color" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/default_margin"
            android:layout_marginTop="15dp"
            android:layout_marginRight="@dimen/default_margin"
            android:background="@drawable/support_ly_rounded_bg"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/new_match_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="26dp"
                android:layout_marginTop="@dimen/default_margin"
                android:layout_marginEnd="@dimen/medium_size"
                android:layout_marginBottom="@dimen/default_margin"
                android:layout_weight="1"
                android:fontFamily="@font/typo_round_bold"
                tools:text="Yeni Eşleşme"
                android:textColor="@color/grey"
                android:textSize="18sp" />

            <com.suke.widget.SwitchButton
                android:id="@+id/new_match_switch_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="@dimen/default_margin"
                app:sb_background="@color/hint_text_color"
                app:sb_border_width="2dp"
                app:sb_checked="false"
                app:sb_checked_color="@color/orangeButton"
                app:sb_shadow_color="@color/grey"
                app:sb_show_indicator="false"
                app:sb_uncheckcircle_color="@color/hint_text_color" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/default_margin"
            android:layout_marginTop="15dp"
            android:layout_marginRight="@dimen/default_margin"
            android:background="@drawable/support_ly_rounded_bg"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/promotional_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="26dp"
                android:layout_marginTop="@dimen/default_margin"
                android:layout_marginEnd="@dimen/medium_size"
                android:layout_marginBottom="@dimen/default_margin"
                android:layout_weight="1"
                android:fontFamily="@font/typo_round_bold"
                tools:text="Promosyonel"
                android:textColor="@color/grey"
                android:textSize="18sp" />

            <com.suke.widget.SwitchButton
                android:id="@+id/promotional_switch_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="@dimen/default_margin"
                app:sb_background="@color/hint_text_color"
                app:sb_border_width="2dp"
                app:sb_checked="false"
                app:sb_checked_color="@color/orangeButton"
                app:sb_shadow_color="@color/grey"
                app:sb_show_indicator="false"
                app:sb_uncheckcircle_color="@color/hint_text_color" />
        </LinearLayout>

    </LinearLayout>

    <com.wang.avi.AVLoadingIndicatorView
        android:id="@+id/progressAvi"
        app:indicatorColor="@color/orangeButton"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:indicatorName="BallScaleIndicator" />


</RelativeLayout>