<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.pethiio.android.ui.main.view.fragments.DashboardFragment">


    <TextView
        android:id="@+id/title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="26dp"
        android:layout_marginTop="@dimen/signup_title_top_margin"
        android:layout_marginBottom="3dp"
        android:fontFamily="@font/typo_round_bold"
        android:text="Bul"
        android:textColor="@color/orangeButton"
        android:textSize="@dimen/signup_title_size" />


    <com.pethiio.android.ui.main.view.customViews.NoDefaultSpinner
        android:id="@+id/memberlist_spinner"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/signup_title_top_margin"
        android:layout_marginEnd="17dp"
        android:background="@drawable/common_input_btn_bg"
        android:elevation="1dp"
        android:fontFamily="@font/poppins_medium"
        android:gravity="center_vertical"
        android:paddingStart="5dp"
        android:paddingEnd="2dp"
        android:spinnerMode="dropdown"
        android:textColor="@color/hint_text_color" />

    <LinearLayout
        android:id="@+id/no_result_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_tv"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:id="@+id/no_result_img"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="120dp"
            android:layout_marginRight="60dp"
            android:src="@drawable/frame" />

        <TextView
            android:id="@+id/no_animal_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="@dimen/default_margin"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="15dp"
            android:layout_marginRight="@dimen/default_margin"
            android:fontFamily="@font/poppins_medium"
            android:gravity="center"
            android:text="Etrafında arama kriterlerine uyan kimse yok"
            android:textColor="@color/grey"
            android:textSize="22sp"
            app:background="@color/light_button"
            tools:ignore="RtlSymmetry" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipChildren="false">

            <RelativeLayout
                android:id="@+id/button_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="80dp"
                android:clipChildren="false"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/skip_button"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginEnd="90dp"
                    app:cardBackgroundColor="@color/tinder_btn_color"
                    app:cardCornerRadius="25dp">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_gravity="center"
                        android:src="@drawable/x_btn" />
                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:id="@+id/like_button"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_toEndOf="@id/skip_button"
                    app:cardBackgroundColor="@color/tinder_btn_color"
                    app:cardCornerRadius="25dp">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_gravity="center"
                        android:src="@drawable/heart" />
                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:id="@+id/slider_horizontal"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="60dp"
                    app:cardBackgroundColor="@color/slider_bg_color"
                    app:cardCornerRadius="15dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:src="@drawable/slidershorizontal" />
                </androidx.cardview.widget.CardView>


            </RelativeLayout>

            <LinearLayout
                android:id="@+id/empty_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="vertical"
                android:visibility="gone">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    android:src="@drawable/no_pet" />

                <TextView
                    android:id="@+id/pet_empty_error_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/default_margin"
                    android:layout_marginLeft="@dimen/margin_minimum"
                    android:layout_marginTop="50dp"
                    android:layout_marginEnd="@dimen/default_margin"
                    android:layout_marginRight="@dimen/margin_minimum"
                    android:fontFamily="@font/typo_round_bold"
                    android:gravity="center"
                    android:textColor="@color/grey"
                    android:textSize="22sp"
                    tools:text="Etrafında arama kriterlerine uyan kimse yok" />
            </LinearLayout>

            <com.yuyakaido.android.cardstackview.CardStackView
                android:id="@+id/card_stack_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/button_container"
                android:layout_marginLeft="@dimen/default_margin"
                android:layout_marginTop="150dp"
                android:layout_marginRight="@dimen/default_margin"
                android:layout_marginBottom="40dp"
                android:clipToPadding="false" />

            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:alpha="0.9"
                android:indeterminateTint="@color/orangeButton"
                android:visibility="gone" />
        </RelativeLayout>


    </LinearLayout>

</RelativeLayout>