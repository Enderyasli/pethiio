<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.pethiio.android.ui.main.view.fragments.MessageFragment">

    <TextView
        android:id="@+id/title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="26dp"
        android:layout_marginTop="@dimen/signup_title_top_margin"
        android:layout_marginBottom="3dp"
        android:textColor="@color/orangeButton"
        android:textSize="@dimen/signup_title_size"
        tools:text="Mesajlar" />

    <ImageView
        android:id="@+id/settings_img"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentEnd="true"
        android:layout_gravity="right"
        android:layout_marginTop="62dp"
        android:layout_marginEnd="17dp"
        android:src="@drawable/gear" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/messages_rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_tv"
        android:layout_marginTop="40dp" />

    <RelativeLayout
        android:id="@+id/no_msj_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/no_msg_img"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="80dp"
            android:layout_marginRight="90dp"
            android:src="@drawable/mesajlar_json" />


        <TextView
            android:id="@+id/no_msg_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/no_msg_img"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/default_margin"
            android:layout_marginTop="60dp"
            android:layout_marginEnd="@dimen/default_margin"
            android:layout_marginBottom="100dp"
            android:fontFamily="@font/poppins_medium"
            android:gravity="center"
            android:textColor="@color/grey"
            android:textSize="22sp"
            app:background="@color/light_button"
            tools:ignore="RtlSymmetry"
            tools:text="Henüz Mesajın yok." />

    </RelativeLayout>

</RelativeLayout>