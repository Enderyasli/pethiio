<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/quickAddToCartLy"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/top_rounded_bottom_sheet"
    android:orientation="vertical"
    android:paddingTop="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        android:layout_marginLeft="@dimen/default_margin"
        android:layout_marginRight="@dimen/default_margin"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3">

                <TextView
                    android:id="@+id/distance_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/medium_size"
                    android:layout_weight="2"
                    android:fontFamily="@font/typo_round_bold"
                    android:gravity="center_vertical"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    tools:text="Mesafe" />

                <TextView
                    android:id="@+id/distance_km_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/medium_size"
                    android:layout_weight="1"
                    android:fontFamily="@font/typo_round_bold"
                    android:gravity="right"
                    android:textColor="@color/orangeButton"
                    android:textSize="16sp"
                    tools:text="0 km" />
            </LinearLayout>

            <com.warkiz.widget.IndicatorSeekBar

                android:id="@+id/distance_seek_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="-10dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="-8dp"
                app:isb_indicator_color="@android:color/transparent"
                app:isb_indicator_text_color="@android:color/transparent"
                app:isb_progress="25"
                app:isb_show_thumb_text="false"
                app:isb_show_tick_texts="false"
                app:isb_thumb_color="@color/whitegrey"
                app:isb_thumb_size="@dimen/medium_size"
                app:isb_track_background_size="6dp"
                app:isb_track_progress_color="@color/orangeButton"
                app:isb_track_progress_size="6dp"
                app:isb_track_rounded_corners="true" />
        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3">

                <TextView
                    android:id="@+id/age_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/medium_size"
                    android:layout_weight="2"
                    android:fontFamily="@font/typo_round_bold"
                    android:gravity="center_vertical"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    tools:text="Yaş" />

                <TextView
                    android:id="@+id/age_value_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/medium_size"
                    android:layout_weight="1"
                    android:fontFamily="@font/typo_round_bold"
                    android:gravity="right"
                    android:textColor="@color/orangeButton"
                    android:textSize="16sp"
                    tools:text="8" />
            </LinearLayout>

            <com.warkiz.widget.IndicatorSeekBar
                android:id="@+id/age_seek_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="-10dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="-8dp"
                app:isb_indicator_color="@android:color/transparent"
                app:isb_indicator_text_color="@android:color/transparent"
                app:isb_max="20"
                app:isb_min="5"
                app:isb_progress="18"
                app:isb_thumb_color="@color/whitegrey"
                app:isb_thumb_size="@dimen/medium_size"
                app:isb_track_background_size="6dp"
                app:isb_track_progress_color="@color/orangeButton"
                app:isb_track_progress_size="6dp"
                app:isb_track_rounded_corners="true" />
        </LinearLayout>

        <include
            android:id="@+id/genderLy"
            layout="@layout/common_spinner_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/medium_size" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/medium_size"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/purpose_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/medium_size"
                    android:fontFamily="@font/typo_round_bold"
                    android:gravity="center_vertical"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    tools:text="Amaç" />

                <RadioGroup
                    android:id="@+id/radio_group_purpose"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/breed_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/medium_size"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="@font/typo_round_bold"
                    android:gravity="center_vertical"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    tools:text="Tür" />

                <com.pethiio.android.ui.main.view.customViews.NoDefaultSpinner
                    android:id="@+id/typeSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_margin="3dp"
                    android:background="@drawable/bg_spinner"
                    android:elevation="1dp"
                    android:fontFamily="@font/typo_round_regular"
                    android:gravity="center_vertical"
                    android:paddingStart="15dp"
                    android:spinnerMode="dropdown"
                    android:textColor="@color/hint_text_color" />


            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/medium_size"
            android:layout_marginBottom="20dp"
            android:weightSum="2">

            <Button
                android:id="@+id/filter_button"
                android:layout_width="0dp"
                android:layout_height="@dimen/common_button_height"
                android:layout_marginRight="2dp"
                android:layout_weight="1"
                android:background="@drawable/orange_button_bg"
                android:fontFamily="@font/typo_round_bold"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/medium_size"
                tools:text="İlerle" />

            <TextView
                android:id="@+id/filter_clear_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:fontFamily="@font/typo_round_bold"
                android:gravity="center"
                android:textAllCaps="false"
                android:textColor="@color/orangeButton"
                android:textSize="@dimen/medium_size"
                tools:text="Filtreyi Temizle" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>