<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/quickAddToCartLy"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/default_margin"
    android:layout_marginRight="@dimen/default_margin"
    android:background="@android:color/transparent"
    android:orientation="vertical"
    android:paddingTop="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        android:background="@drawable/top_rounded_bottom_sheet"
        android:orientation="vertical">

        <TextView
            android:id="@+id/distance_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/medium_size"
            android:fontFamily="@font/typo_round_bold"
            android:gravity="center_vertical"
            android:text="Mesafe"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <SeekBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="100"
            android:maxHeight="20dp"
            android:minHeight="30dp"
            android:progress="90"
            android:progressTint="@color/orangeButton"
            android:thumbTint="@color/white" />

        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/purpose_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/medium_size"
                    android:fontFamily="@font/typo_round_bold"
                    android:gravity="center_vertical"
                    android:text="Amaç"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <RadioGroup
                    android:id="@+id/radio_group_purpose"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/breed_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/medium_size"
                    android:fontFamily="@font/typo_round_bold"
                    android:gravity="center_vertical"
                    android:text="Tür"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <RadioGroup
                    android:id="@+id/radio_group_breed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp" />

            </LinearLayout>
        </LinearLayout>

        <com.warkiz.widget.IndicatorSeekBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:isb_max="100"
            app:isb_min="0"
            app:isb_show_thumb_text="false"
            app:isb_progress="25"
            app:isb_show_tick_texts="false"
            app:isb_seek_smoothly="true"
            app:isb_thumb_color="@color/white"
            app:isb_thumb_size="20dp"
            app:isb_show_indicator="circular_bubble"
            app:isb_indicator_color="@color/grey"
            app:isb_track_background_size="6dp"
            app:isb_track_progress_color="@color/orangeButton"
            app:isb_track_progress_size="6dp"
            app:isb_only_thumb_draggable="false"/>

    </LinearLayout>
</FrameLayout>