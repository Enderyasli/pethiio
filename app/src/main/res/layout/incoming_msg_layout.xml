<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/message_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/default_margin"
    android:layout_marginTop="@dimen/default_margin"
    android:layout_marginEnd="50dp"
    android:layout_marginBottom="10dp"
    android:background="@drawable/chat_message_sender_bg"
    android:elevation="1dp"
    android:paddingLeft="10dp"
    android:paddingTop="10dp"
    android:paddingEnd="10dp"
    android:paddingRight="10dp"
    tools:ignore="RtlSymmetry">

    <TextView
        android:id="@+id/message_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="10dp"
        android:fontFamily="@font/typo_round_regular"
        android:minWidth="120dp"
        android:textColor="@color/darkGrey"
        android:textSize="14sp"
        tools:text="Hsadjadja jasdjadja jsajdsad jdsajajdas jasjdjasdas jasjdajsdajs jasjdasjdasjdas jdasjdajsdi" />

    <TextView
        android:id="@+id/time_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/message_text"
        android:layout_marginStart="-30dp"
        android:layout_toEndOf="@+id/message_text"
        android:fontFamily="@font/typo_round_regular"
        android:maxWidth="120dp"
        android:maxLines="1"
        android:paddingBottom="4dp"
        android:textColor="@color/grey"
        android:textSize="14sp"
        tools:text="10:10" />

</RelativeLayout>
