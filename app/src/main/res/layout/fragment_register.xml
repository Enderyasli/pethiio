<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.view.login.singUp.RegisterFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/back_btn"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="68dp"
            android:layout_marginStart="@dimen/default_margin"
            app:cardCornerRadius="17dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:src="@drawable/back_arrow" />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="305dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:alpha="0.11"
                    android:background="@color/signup_bg_color" />


                <Spinner
                    android:id="@+id/spinner"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_gravity="end"
                    android:layout_marginTop="68dp"
                    android:layout_marginEnd="24dp"
                    android:background="@drawable/bg_spinner_transparent"
                    android:fontFamily="@font/typo_round_regular"
                    android:gravity="center_vertical"
                    android:paddingStart="15dp"
                    android:spinnerMode="dropdown"
                    android:textColor="@color/hint_text_color" />

                <!--            <TextView-->
                <!--                android:layout_width="wrap_content"-->
                <!--                android:layout_height="wrap_content"-->
                <!--                android:layout_gravity="end"-->
                <!--                android:layout_marginTop="68dp"-->
                <!--                android:layout_marginEnd="46dp"-->
                <!--                android:layout_marginRight="46dp"-->
                <!--                android:text="Tr"-->
                <!--                android:textColor="@color/grey"-->
                <!--                android:textSize="22dp" />-->

                <TextView
                    android:id="@+id/signup_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/default_margin"
                    android:layout_marginRight="@dimen/default_margin"
                    android:layout_marginBottom="3dp"
                    android:fontFamily="@font/typo_round_bold"
                    android:textColor="@color/orangeButton"
                    android:textSize="40sp"
                    tools:text="@string/sign_up" />

                <TextView
                    android:id="@+id/signup_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/default_margin"
                    android:layout_marginTop="200dp"
                    android:layout_marginRight="@dimen/default_margin"
                    android:fontFamily="@font/typo_round_regular"
                    android:textColor="@color/grey"
                    android:textSize="22sp"
                    tools:text="Kayıt olmak için kendinle ilgili bilgileri gir." />

            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="41dp"
                android:layout_marginRight="20dp"
                android:orientation="vertical">

                <include
                    android:id="@+id/nameLy"
                    layout="@layout/common_rounded_input_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/surname_title_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_minimum"
                        android:layout_marginRight="@dimen/margin_minimum"
                        android:fontFamily="@font/typo_round_bold"
                        android:maxLength="30"
                        android:textColor="@color/input_text_color"
                        android:textSize="14sp"
                        tools:text="Ad *" />


                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_minimum"
                        android:layout_marginRight="@dimen/margin_minimum"
                        android:layout_marginBottom="5dp"
                        app:cardBackgroundColor="@color/whitegrey"
                        app:cardCornerRadius="@dimen/commonButtonRadius"
                        app:cardElevation="2dp">

                        <EditText
                            android:id="@+id/surname_placeholder_tv"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:background="@drawable/common_input_btn_bg"
                            android:fontFamily="@font/typo_round_regular"
                            android:gravity="center_vertical"
                            android:maxLength="30"
                            android:paddingLeft="15dp"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textColorHint="@color/hint_text_color"
                            android:textSize="14sp"
                            tools:hint="Ad" />
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/email_title_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_minimum"
                        android:layout_marginRight="@dimen/margin_minimum"
                        android:fontFamily="@font/typo_round_bold"
                        android:textColor="@color/input_text_color"
                        android:textSize="14sp"
                        tools:text="Ad *" />


                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_minimum"
                        android:layout_marginRight="@dimen/margin_minimum"
                        android:layout_marginBottom="5dp"
                        app:cardBackgroundColor="@color/whitegrey"
                        app:cardCornerRadius="@dimen/commonButtonRadius"
                        app:cardElevation="2dp">

                        <EditText
                            android:id="@+id/email_placeholder_tv"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:background="@drawable/common_input_btn_bg"
                            android:fontFamily="@font/typo_round_regular"
                            android:gravity="center_vertical"
                            android:maxLength="60"
                            android:paddingLeft="15dp"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textColorHint="@color/hint_text_color"
                            android:textSize="14sp"
                            tools:hint="Ad" />
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/password_title_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/margin_minimum"
                            android:layout_marginTop="@dimen/default_margin"
                            android:layout_marginRight="@dimen/margin_minimum"
                            android:fontFamily="@font/typo_round_bold"
                            android:textColor="@color/input_text_color"
                            android:textSize="14sp"
                            tools:text="Şifre" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_weight="1" />

                        <TextView
                            android:id="@+id/password_detail_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/margin_minimum"
                            android:layout_marginTop="@dimen/default_margin"
                            android:layout_marginRight="@dimen/margin_minimum"
                            android:fontFamily="@font/typo_round_bold"
                            android:textColor="@color/input_text_color"
                            android:textSize="10sp"
                            tools:text="Şifre 1'i büyük 8 karakterden oluşmalı" />


                    </LinearLayout>


                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_minimum"
                        android:layout_marginRight="@dimen/margin_minimum"
                        android:layout_marginBottom="5dp"
                        app:cardBackgroundColor="@color/whitegrey"
                        app:cardCornerRadius="@dimen/commonButtonRadius"
                        app:cardElevation="2dp">

                        <EditText
                            android:id="@+id/password_placeholder_tv"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:background="@drawable/common_input_btn_bg"
                            android:fontFamily="@font/typo_round_regular"
                            android:gravity="center_vertical"
                            android:inputType="textPassword"
                            android:maxLength="16"
                            android:paddingStart="15dp"
                            android:paddingEnd="45dp"
                            android:textColor="@color/black"
                            android:textColorHint="@color/hint_text_color"
                            android:textSize="14sp"
                            tools:hint="Password"
                            tools:ignore="RtlSymmetry" />

                        <ImageView
                            android:id="@+id/eye"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="right|center_vertical"
                            android:layout_marginEnd="15dp"
                            android:src="@drawable/eye"
                            android:visibility="gone"
                            tools:ignore="RtlHardcoded" />


                    </androidx.cardview.widget.CardView>


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="70dp"
                    android:orientation="horizontal"
                    android:paddingBottom="10dp">

                    <CheckBox
                        android:id="@+id/register_cb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:theme="@style/checkbox" />

                    <TextView
                        android:id="@+id/terms_link_title_tv"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/typo_round_regular"
                        android:gravity="center_vertical"
                        android:textColor="@color/input_text_color"
                        android:textSize="11sp"
                        tools:text="Kullanım Koşulları  " />


                </LinearLayout>

                <Button
                    android:id="@+id/signup_btn"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/common_button_height"
                    android:layout_marginStart="2dp"
                    android:layout_marginTop="48dp"
                    android:layout_marginEnd="2dp"
                    android:layout_marginBottom="50dp"
                    android:background="@drawable/disabled_button_bg"
                    android:fontFamily="@font/typo_round_bold"
                    android:textAllCaps="false"
                    android:textColor="@color/disabled_button_color"
                    android:textSize="16dp"
                    tools:text="@string/sign_up" />

            </LinearLayout>
        </LinearLayout>

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:alpha="0.9"
            android:indeterminateTint="@color/orangeButton"
            android:visibility="gone" />
    </RelativeLayout>

</ScrollView>