<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/message_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="@dimen/default_margin"
        android:layout_marginEnd="@dimen/default_margin"
        android:layout_marginBottom="10dp"
        android:background="@drawable/chat_message_receiver_bg"
        android:padding="12dp">

        <TextView
            android:id="@+id/message_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:fontFamily="@font/typo_round_regular"
            android:minWidth="120dp"
            android:textColor="@color/darkGrey"
            android:textSize="14sp"
            tools:text="Hijasdjasjda jasdjasjdas jasdjasjdas jadjasjda jsjdasjdasjasdjasjdas jasjdjasdas jasjdasjda jasdjsadjas jdajd" />

        <TextView
            android:id="@+id/time_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/message_text"
            android:layout_marginStart="-35dp"
            android:layout_toEndOf="@+id/message_text"
            android:fontFamily="@font/typo_round_regular"
            android:maxWidth="120dp"
            android:maxLines="1"
            android:paddingBottom="4dp"
            android:textColor="@color/grey"
            android:textSize="14sp"
            tools:text="10:10" />

    </RelativeLayout>
</RelativeLayout>